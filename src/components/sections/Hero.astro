---
"use client";

import { FileText, Github, Gitlab, Linkedin, Mail } from "@lucide/astro";

const socialLinks = [
  {
    icon: Github,
    href: "https://github.com/jost1x",
    label: "GitHub",
  },
  {
    icon: Linkedin,
    href: "https://linkedin.com/in/ch-melchiori",
    label: "LinkedIn",
  },
  {
    icon: Mail,
    href: "mailto:charlie.melchiorip@gmail.com",
    label: "Email",
  },
  {
    icon: Gitlab,
    href: "https://gitlab.com/jost1x",
    label: "GitLab",
  },
];
---

<section id="index" class="min-h-screen flex items-center px-6 pt-20">
  <div class="max-w-5xl mx-auto w-full">
    {/* Greeting */}
    <p class="text-muted-foreground text-lg md:text-xl mb-4">Hola, Soy</p>

    {/* Name with badge */}
    <div class="flex flex-wrap items-center gap-4 mb-6">
      <h1
        class="text-4xl md:text-5xl lg:text-6xl font-semibold text-foreground"
      >
        Charlie Melchiori
      </h1>
      <span
        class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-white/8 border border-white/8 backdrop-blur-sm text-xs text-foreground"
      >
        <span class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse"></span>
        Disponible
      </span>
    </div>

    {/* Description with highlighted words */}
    <p
      class="text-muted-foreground text-base md:text-lg leading-relaxed max-w-2xl mb-8"
    >
      <span
        class="inline-flex items-center px-2.5 py-0.5 rounded-md bg-primary/20 text-primary border border-primary/30 font-medium mr-1"
      >
        Ingeniero Civil Electrónico
      </span>
      , apasionado por la informática y la tecnología. Este portafolio refleja un
      compromiso con la{" "}
      <span
        class="inline-flex items-center px-2 py-0.5 rounded-md bg-emerald-500/20 text-emerald-400 border border-emerald-500/30 font-medium"
      >
        excelencia
      </span>
      {" "}y la{" "}
      <span
        class="inline-flex items-center px-2 py-0.5 rounded-md bg-amber-500/20 text-amber-400 border border-amber-500/30 font-medium"
      >
        innovación
      </span>
      . Explora los diferentes proyectos para conocer más sobre mi trayectoria profesional.
    </p>

    {/* CV Button */}
    <a
      href="https://rxresu.me/jost1x/charlie-melchiori-ing-cvl-electronico"
      target="_blank"
      class="inline-flex items-center gap-2 px-6 py-3 mb-10 rounded-xl  text-foreground text-sm font-medium border border-white/6 bg-white/3 backdrop-blur-md transition-all duration-300 hover:border-primary/20 hover:bg-white/6"
    >
      <FileText class="w-4 h-4" />
      Ver Currículum
    </a>

    {/* Social Links */}
    <div class="flex items-center gap-4">
      {
        socialLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={link.label}
            class="p-3 rounded-xl text-muted-foreground border border-white/6 bg-white/3 backdrop-blur-md transition-all duration-300 hover:border-primary/20 hover:bg-white/7"
          >
            {<link.icon />}
          </a>
        ))
      }
    </div>
  </div>
</section>
