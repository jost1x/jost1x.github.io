---
import { Github, Linkedin, Mail } from "lucide-react";

const socialLinks = [
  {
    icon: Github,
    href: "https://github.com/jost1x",
    label: "GitHub",
  },
  {
    icon: Linkedin,
    href: "https://linkedin.com/in/ch-melchiori",
    label: "LinkedIn",
  },
  {
    icon: Mail,
    href: "mailto:charlie.melchiorip@gmail.com",
    label: "Email",
  },
];
---

<footer class="border-t border-white/6 px-6 py-8">
  <div
    class="text-muted-foreground mx-auto flex max-w-5xl flex-col items-center justify-between gap-4 text-xs sm:flex-row"
  >
    <p>2026 Charlie Melchiori</p>
    <div class="flex items-center gap-4">
      {
        socialLinks.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={link.label}
            class="hover:text-primary transition-colors duration-300"
          >
            {<link.icon />}
          </a>
        ))
      }
    </div>
  </div>
</footer>
