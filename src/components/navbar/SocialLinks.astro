---
import { iconMap, socialLinks } from "./data";
---

<div class="hidden items-center gap-1 md:flex">
  {
    socialLinks.map((link) => {
      const Icon = iconMap[link.icon];
      return (
        <a
          href={link.href}
          aria-label={link.label}
          class="text-muted-foreground hover:text-primary rounded-lg p-2 transition-all duration-300 hover:bg-white/6"
        >
          <Icon size={20} />
        </a>
      );
    })
  }
</div>
